{
  "$schema": "https://raw.githubusercontent.com/MrLuje/vs-commitizen/master/config-schema.json",
  "types": [
    {
      "type": "FEAT🎉",
      "description": "代码新增"
    },
    {
      "type": "BUGFIX🔧",
      "description": "Bug 修复"
    },
    {
      "type": "MISC📝",
      "description": "仅仅修改了文档、格式、增加依赖等"
    },
    {
      "type": "REFACTOR🎨",
      "description": "代码重构，没有新增功能或修复 bug"
    },
    {
      "type": "PREF⚡️",
      "description": "优化相关，如提升性能、用户体验等"
    },
    {
      "type": "TEST✅",
      "description": "测试代码，包括单元测试、集成测试"
    },
    {
      "type": "REVERT♻️",
      "description": "版本回滚"
    }
  ]
}